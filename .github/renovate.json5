{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["^.*build.yaml$", "^.*config.yaml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "^# datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sversion: (?<currentValue>.*)\\s",
        "^# datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\saarch64: (?<currentValue>.*)\\s",
        "^# datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\samd64: (?<currentValue>.*)\\s",
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$",
      "extractVersionTemplate": "^nightly-(?<version>.*)$"
    },
  ],
}
