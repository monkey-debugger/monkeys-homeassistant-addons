{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["^(build.yaml|config.yaml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "^# datasource=(?<datasource>.*?) depName=(?<depName>.*?)( extractVersion=(?<extractVersion>.*?))?( versioning=(?<versioning>.*?))?\\sversion: (?<currentValue>.*)\\s",
        "^# datasource=(?<datasource>.*?) depName=(?<depName>.*?)( extractVersion=(?<extractVersion>.*?))?( versioning=(?<versioning>.*?))?\\saarch64: (?<currentValue>.*)\\s",
        "^# datasource=(?<datasource>.*?) depName=(?<depName>.*?)( extractVersion=(?<extractVersion>.*?))?( versioning=(?<versioning>.*?))?\\samd64: (?<currentValue>.*)\\s",
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^nightly-?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$",
    },
  ],
}
